<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Gesuipan.mapper.panMapper">

	<!-- 보기 -->
	<select id="getAllPan" resultType="com.example.gesuipan.DTO.panDTO">
		select * from gesuipan order by id desc
	</select>

	<!-- 작성 -->
	<insert id="insertpan" parameterType="com.example.Gesuipan.DTO.panDTO">
	 	insert into gesuipan (title, content, writer) values(#{title}, #{content}, #{writer})
	</insert>
	
	<!-- 수정 -->
	<update id="updatepan" parameterType="com.example.Gesuipan.DTO.gesuipan">
		update gesuipan SET title = #{title}, content = #{content} where id = #{id}
	</update>
	
	<!-- 삭제 -->
	<delete id="deletepan" parameterType="int">
		delete from gesuipan where id = #{id}
	</delete>
	
</mapper>

